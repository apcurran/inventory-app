<div class="wrapper">
    <h2 class="list-title">GPUs</h2>
    <a class="list-link" href="/gpus/new">Add a New GPU</a>

    <main class="main">
    {{#each gpus}}
        <article class="article">
            <h3 class="article__title">{{ this.supplier }} {{ this.name }}</h3>
            <section class="article__description">
                <p>Max Boost: {{ this.clockspeed }} MHz</p>
                <p>Total Video Memory: {{ this.vram }} GB</p>
            </section>
            <form class="form-delete" method="POST">
                <input type="hidden" name="gpuId" required="true" class="form-delete__input" value="{{ this._id }}">
                <input class="form-delete__submit" type="submit" value="Delete">
                <a class="form-delete__update-link" href="{{ this.updateUrl }}">Update</a>
            </form>
        </article>
    {{/each}}
    </main>
</div>

